<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_weight="0.01"
                android:minHeight="2dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical">

                </LinearLayout>
            </android.support.v7.widget.Toolbar>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Sign Up"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/First"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:text="First name"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Last name"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <EditText
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape"
                    android:hint="Your First Name"
                    android:textColor="#90A4AE"
                    android:textColorHint="#90A4AE"
                    android:textAlignment="viewStart"
                    android:id="@+id/firstname"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
                <EditText
                    android:id="@+id/lastName"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape"
                    android:hint="Your First Name"
                    android:textStyle="bold"
                    android:textColorHint="#90A4AE"
                    android:textColor="#90A4AE"
                    android:textSize="15dp" />




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tx_blood"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="10dp"
                    android:text="Blood Group"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tx_mobile"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:text="Phone number"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/blood"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape"
                    android:hint="Your Blood group"
                    android:textColorHint="#90A4AE"
                    android:textColor="#90A4AE"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/MobileNumber"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape"
                    android:hint="Your Mobile No."
                    android:textStyle="bold"
                    android:textColorHint="#90A4AE"
                    android:textColor="#90A4AE"
                    android:textSize="15dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="17dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tx_country"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="10dp"
                    android:text="Country"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tx_gender"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:text="Present Adress"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/country"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@drawable/shape"
                    android:hint="country Name"
                    android:textColorHint="#90A4AE"
                    android:textColor="#90A4AE"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/address"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape"
                    android:textStyle="bold"
                    android:hint="present adress"
                    android:textColorHint="#90A4AE"
                    android:textColor="#90A4AE"
                    android:textSize="15dp" />
            </LinearLayout>




            <TextView
                android:id="@+id/tx_password"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:text="Password"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/Password"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/shape"
                android:hint="Password"
                android:textColorHint="#90A4AE"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:textColor="#90A4AE"
                android:textSize="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="Re-write password"
                android:textColor="#ffffff"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/RePassword"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:textColorHint="#90A4AE"
                android:textColor="#90A4AE"
                android:textStyle="bold"
                android:background="@drawable/shape"
                android:inputType="textPassword"
                android:hint="Re-write password"
                android:textSize="15dp" />












            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffffff"
                    android:outlineSpotShadowColor="#ffffff"
                    android:layout_weight="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"

                    android:layout_weight="1.5"
                    android:text="I agree with the term and conditions"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button

                android:id="@+id/btn_confirm"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape"
                android:text="Confirm"
                android:textColor="#fff"
                android:textStyle="bold" />
            <TextView

                android:id="@+id/link_login"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:text="Already a member? Login"
                android:textColor="#ffffff" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>